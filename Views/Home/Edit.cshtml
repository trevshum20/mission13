                <tr>
                    <td><label asp-for="BowlerMiddleInit">Middle Initial:</label></td>
                    <td><input asp-for="BowlerMiddleInit" /></td>
                </tr>

                <tr>
                    <td><label asp-for="BowlerAddress">Address:</label></td>
                    <td><input asp-for="BowlerAddress" /></td>
                </tr>

                <tr>
                    <td><label asp-for="BowlerCity">City:</label></td>
                    <td><input asp-for="BowlerCity" /></td>
                </tr>

                @*<tr>
                <td><label asp-for="BowlerState">State:</label></td>
                <td><input asp-for="BowlerState" maxlength="2" /></td>
            </tr>*@

                <tr>
                    <td><label asp-for="BowlerZip">Zip code:</label></td>
                    <td><input asp-for="BowlerZip" /></td>
                </tr>

                <tr>
                    <td><label asp-for="BowlerPhoneNumber">Phone Number:</label></td>
                    <td><input asp-for="BowlerPhoneNumber" /></td>
                </tr>

            </table>

            <label asp-for="BowlerState">State:</label>
            <select asp-for="BowlerState">
