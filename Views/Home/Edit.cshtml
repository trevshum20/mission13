    <br />
    <h1 style="text-align: center; font-size: 70px; font-family: papyrus;"><b>Edit Bowler Info</b></h1>
    <fieldset>


        <form method="post">

            <input type="hidden" asp-for="BowlerID" value="@Model.BowlerID" />
            <table style="text-align: center">


                <tr>
                    <td><label asp-for="BowlerFirstName">First Name:</label></td>
                    <td><input asp-for="BowlerFirstName" /></td>
                </tr>

                <tr>
                    <td><label asp-for="BowlerLastName">Last Name:</label></td>
                    <td><input asp-for="BowlerLastName" /></td>
